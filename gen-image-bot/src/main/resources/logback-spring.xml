<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Base directory for log files -->
    <property name="LOG_PATH" value="logs"/>

    <!-- Rolling file appender: writes to tg-bot.log and rolls daily -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Current log file -->
        <file>${LOG_PATH}/tg-bot.log</file>

        <!-- Rollover strategy: one file per day, keep 30 days -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Archived files will be named tg-bot.2025-09-03.log, etc. -->
            <fileNamePattern>${LOG_PATH}/tg-bot.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Log message layout -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Optional: keep console logging for development convenience -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="DEBUG">
        <appender-ref ref="ROLLING"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
